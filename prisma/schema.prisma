datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

enum Status {
  pending
  done
}

model Todo {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  title       String?  @default("")
  note        String
  status      Status   @default(pending)
  creatorId   Int      @default(0)
}
